<!-- LANDING -->
<section class="sctn-landing">
	<div class="landing-text">
		<h1>Figs &amp; Limes</h1>
    <span>Wedding and Party Bands</span>
		<nav>
			<a href="#about">About</a>
			<a href="#bands">Bands</a>
			<a href="#faq">FAQ</a>
			<a href="mailto:figsandlimes@gmail.com">Contact</a>
			<!-- <a class="form-toggle">Contact</a> -->
		</nav>
	</div>
</section>

<!-- ABOUT -->
<section class="sctn-about" id="about">
	<div class="about-text">
		<h2>ABOUT</h2>
		<p>At Figs & Limes we provide exceptional, hand-selected party and wedding bands to suit any occasion, from intimate gatherings to extravagant events.</p>
		<p>We're based in Bristol (because it's great) and our acts regularly perform all over the South West. They're happy to travel though and are available worldwide.</p>
		<p>Why are we called Figs and Limes? We offer slightly different acts that stand out from the crowd. Hand-picked bands, like hand-picked fruit.</p>
	</div>
</section>

<!-- BANDS -->
<section class="sctn-bands" id="bands">
	<h2>BANDS</h2>
	<div class="bands-wrap">
		{{#each bands}}
			<a href="/bands/{{url}}" target="_blank">
				<div class="band-thumbImg" style="background-image: url('/pics/bands/{{thumbImg}}.jpg');"></div>
				<div class="band-info">
					<span>{{name}}</span>
					<span>- {{subtitle}} -</span>
				</div>
			</a>
		{{/each}}
	</div>
</section>

<!-- FAQ -->
<section class="sctn-faq" id="faq">
	<div class="faq-text">
		<h2>FAQ</h2>
		{{#each faqs}}
			<div>
				<h3>{{q}}</h3>
				<p>{{a}}</p>
			</div>
		{{/each}}
	</div>
</section>
